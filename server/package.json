{
  "name": "minimal-express-app",
  "version": "1.0.0",
  "description": "Minimal Express app exposing only POST /api/jira-tickets",
  "main": "src/server.js",
  "scripts": {
    "start": "node ./src/index.js",
    "dev": "nodemon ./src/index.js",
    "test": "jest",
    "lint": "eslint ."
  },
  "dependencies": {
    "axios": "^1.7.7",
    "cors": "2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "eslint": "^9.24.0",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ignore": [
      "node_modules",
      "package.json",
      "package-lock.json",
      "*.lock",
      "*.log",
      "*.md",
      ".git",
      "dist",
      "build"
    ],
    "ext": "js,json"
  }
}
